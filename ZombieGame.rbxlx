          <string name="Name">Camera</string>
          <string name="Source"><![CDATA[-- Simple First-Person Camera
-- Step 1: Just get the camera working

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera
local character = player.Character or player.CharacterAdded:Wait()

-- Lock mouse
UserInputService.MouseBehavior = Enum.MouseBehavior.LockCenter

-- Camera angles
local angleX = 0
local angleY = 0

-- Mouse input
UserInputService.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		angleY = angleY - input.Delta.X * 0.4
		angleX = math.clamp(angleX - input.Delta.Y * 0.4, -80, 80)
	end
end)

-- Update camera every frame
RunService.RenderStepped:Connect(function()
	local head = character:FindFirstChild("Head")
	if head then
		local cameraCFrame = CFrame.new(head.Position)
			* CFrame.Angles(0, math.rad(angleY), 0)
			* CFrame.Angles(math.rad(angleX), 0, 0)

		camera.CFrame = cameraCFrame
		camera.CameraType = Enum.CameraType.Scriptable
	end
end)

print("✓ Camera loaded!")
]]></string>
